{% extends 'jaya/baseJaya.html.twig' %}
{% block title %}
    Connexion
{% endblock %}
{% block body %}

    <div class="container choixUe">
        {%  if semestre == null %}
            <div class="row">
                <div class="col-md-offset-3 col-md-5">
                    <div class="alert alert-info">
                        <b>Nous sommes actuellement hors semestre, aucun choix d'UE n'est prévu !</b>
                    </div>
                </div>
            </div>
        {% endif %}

        {% if semestre != null %}
            <div class="row">
                <div class="col-md-12">
                    <div class="page-header">
                        <h1>{{ semestre.nom }}</h1>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <h4>
                        <div class="alert alert-info">
                            {% if nowDate < semestre.dateDebutChoix %}
                                Vous pouvez choisir vos unités d'enseignement optionelles à partir de la date du <b>{{ semestre.dateDebutChoix|date("d/m/Y") }}</b> à <b>{{ semestre.dateDebutChoix|date("H:i:s") }}</b>.
                            {% elseif nowDate > semestre.dateFinChoix %}
                                Le choix des unités d'enseignement optionelles est cloturés.
                            {% else %}
                                Le choix des unités d'enseignement se cloture le <b>{{ semestre.dateFinChoix|date("d/m/Y") }}</b> à <b>{{ semestre.dateFinChoix|date("H:i:s") }}</b>.
                            {% endif %}
                        </div>
                    </h4>
                </div>
            </div>

            {% if poles != null %}
                {% for pole in poles %}
                <div class="row">
                    <div class="col-md-12">
                        {{ pole.nom }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <table class="table sortable">
                            <thead>
                                <tr>
                                    <th class="col-md-1">Id</th>
                                    <th class="col-md-8">Nom</th>
                                    <th class="col-md-3">Préférence</th>
                                </tr>
                            </thead>

                            <tbody>
                            {% for matiere in matieres %}
                                {% if matiere.matiere.poleDeCompetence == pole %}
                                    <tr draggable="true" rel="{{ matiere.id }}">
                                        <td>{{ matiere.id }}</td>
                                        <td>{{ matiere.matiere.nom }}</td>
                                        <td>{{ matiere.ordre }}</td>
                                    </tr>
                                {% endif %}
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
                {% endfor %}
            {% endif %}

        {% endif %}

    </div>

{% endblock %}