{% extends 'baseAdmin.html.twig' %}

{% block body %}

    <div class="col-lg-12">
        <h1 class="page-header">Gestion des semestres</h1>
    </div>
    <div class="col-lg-12">
    <!-- /.panel-heading -->
        <div class="panel panel-default">
            <div class="panel-heading">
                Supprimer un semestre
            </div>
            <div class="panel-body">
                <table width="50%" class="table table-striped table-bordered table-hover">
                    <tr>
                        <td>Nom du semestre</td>
                        <td>{{ semestre.nom }}</td>
                    </tr>
                    <tr>
                        <td>Début du semestre</td>
                        <td>{{ semestre.dateDebut|date("d/m/Y") }}</td>
                    </tr>
                    <tr>
                        <td>Fin du semestre</td>
                        <td>
                            {{ semestre.dateFin|date("d/m/Y") }}
                        </td>
                    </tr>
                    <tr>
                        <td>Début des choix d'options</td>
                        <td>
                            {{ semestre.dateDebutChoix|date("d/m/Y H:i:s")}}
                        </td>
                    </tr>
                    <tr>
                        <td>Fin des choix d'options</td>
                        <td>
                            {{ semestre.dateFinChoix|date("d/m/Y H:i:s") }}
                        </td>
                    </tr>
                </table>

                <button type="button" onclick="location.href='{{ path('admin_semestre')}}';" class="btn btn-default pull-left"> Retour </button>
                <button type="button" onclick="location.href='{{ path('admin_semestre_edit',{'id':semestre.id}) }}';" class="btn btn-primary"> Modifier </button>
                <button type="button" onclick="location.href='{{ path('admin_semestre_delete',{'id':semestre.id})}}';" class="btn btn-danger pull-right"> Supprimer </button>
            </div>
        </div>
    </div>

{% endblock %}