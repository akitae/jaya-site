{% extends 'baseAdmin.html.twig' %}

{% block body %}

    <div id="page-wrapper" style="min-height: 518px;">

        <div class="panel panel-default">
            <div class="panel-heading">
                Gestion des utilisateurs
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <button type="button" onclick="location.href='{{ path('admin_user_edit',{'id': 'new ' })}}';" class="btn btn-primary pull-right"><i class="fas fa-plus"></i> Ajouter un utilisateur</button>

                    {#Tableau#}
                    <div class="row">
                        <div class="col-sm-12">
                            <table class="tableAdmin">
                                <thead>
                                    <tr role="row">
                                        <th>Id</th>
                                        <th>Nom</th>
                                        <th>Pr√©nom</th>
                                        <th>Email</th>
                                        <th>Type</th>
                                        <th>Valide</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for user in listUser %}
                                    <tr class="gradeA odd" role="row">
                                        <td class="sorting_1">{{ user.numeroEtudiant }}</td>
                                        <td>{{ user.nom }}</td>
                                        <td>{{ user.prenom }}</td>
                                        <td>{{ user.email }}</td>
                                        <td>{{ user.type }}</td>
                                        <td>{{ user.valide }}</td>
                                        <td>
                                            <a href="{{ path('admin_user_show',{'id':user.id}) }}" class="button">Voir</a>
                                            <button>Modifier</button>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
            </div>
        </div>

    </div>

{% endblock %}
