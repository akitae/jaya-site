{% extends 'baseAdmin.html.twig' %}

{% block body %}

    <div id="page-wrapper" style="min-height: 518px;">

        <div class="panel panel-default">
            <div class="panel-heading">
                Gestion des utilisateurs
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTables_wrapper form-inline dt-bootstrap no-footer"><div class="row">
                        {#Choix du nombre de lignes#}
                        <div class="col-sm-6"><div class="dataTables_length" id="dataTables-example_length">
                                <label>Afficher
                                    <select name="dataTables-example_length" aria-controls="dataTables-example" class="form-control input-sm">
                                        <option value="10">10</option><option value="25">25</option>
                                        <option value="50">50</option><option value="100">100</option>
                                    </select>
                                </label>
                            </div>
                        </div>

                        {#Filtre#}
                        <div class="col-sm-6">
                            <div id="dataTables-example_filter" class="dataTables_filter">
                                <label>Search:
                                    <input type="search" class="form-control input-sm" placeholder="" aria-controls="dataTables-example">
                                </label>
                            </div>
                        </div>

                        <button> Ajouter un utilisateur </button>
                    </div>

                    {#Tableau#}
                    <div class="row">
                        <div class="col-sm-12">
                            <table width="100%" class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr role="row">
                                        <th>Id</th>
                                        <th>Nom</th>
                                        <th>Pr√©nom</th>
                                        <th>Email</th>
                                        <th>Type</th>
                                        <th>Valide</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for user in listUser %}
                                    <tr class="gradeA odd" role="row">
                                        <td class="sorting_1">{{ user.numeroEtudiant }}</td>
                                        <td>{{ user.nom }}</td>
                                        <td>{{ user.prenom }}</td>
                                        <td>{{ user.email }}</td>
                                        <td>{{ user.type }}</td>
                                        <td>{{ user.valide }}</td>
                                        <td>
                                            <a href="{{ path('admin_user_show',{'id':user.id}) }}" class="button">Voir</a>
                                            <button>Modifier</button>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
            </div>
            <!-- /.panel-body -->
        </div>

    </div>
</div>


{% endblock %}
