{% extends 'baseAdmin.html.twig' %}

{% block body %}

    <div id="page-wrapper" style="min-height: 518px;">

        <div class="panel panel-default">
            <div class="panel-heading">
                Gestion des utilisateurs
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTables_wrapper form-inline dt-bootstrap no-footer"><div class="row">
                        <button> Ajouter un utilisateur </button>
                    </div>

                    {#Tableau#}
                    <div class="row">
                        <div class="col-sm-12">
                            <table id="tableUser" class="table table-striped table-bordered dataTable">
                                <thead>
                                    <tr role="row">
                                        <th>Id</th>
                                        <th>Nom</th>
                                        <th>Pr√©nom</th>
                                        <th>Email</th>
                                        <th>Type</th>
                                        <th>Valide</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for user in listUser %}
                                    <tr class="gradeA odd" role="row">
                                        <td class="sorting_1">{{ user.numeroEtudiant }}</td>
                                        <td>{{ user.nom }}</td>
                                        <td>{{ user.prenom }}</td>
                                        <td>{{ user.email }}</td>
                                        <td>{{ user.type }}</td>
                                        <td>{{ user.valide }}</td>
                                        <td>
                                            <a href="{{ path('admin_user_show',{'id':user.id}) }}" class="button">Voir</a>
                                            <button>Modifier</button>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
            </div>
            <!-- /.panel-body -->
        </div>

    </div>
</div>

<script type="text/javascript">
    $(document).ready(function() {
        $('#tableUser').DataTable();
    } );
    // For demo to fit into DataTables site builder...
    $('#tableUser')
        .removeClass( 'display' )
        .addClass('table table-striped table-bordered');
</script>


{% endblock %}
