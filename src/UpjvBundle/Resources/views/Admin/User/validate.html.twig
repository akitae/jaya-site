{% extends 'baseAdmin.html.twig' %}

{% block body %}

<div class="panel panel-default">
    <div class="col-lg-12">
        <h1 class="page-header">Validation des étudiants</h1>
    </div>
    <div class="col-lg-12">

        <div class="panel panel-default">
            <div class="panel-heading">
                Liste des étudiants non-validés
            </div>
            <div class="panel-body">
                <button type="button" onclick="location.href='{{ path('admin_validate_all_user')}}';" class="btn btn-primary pull-right"><i class="fa fa-check"></i> Valider tous les étudiants</button>
                <form action="/admin/validateUser" method="post">
                  <div class="row">
                    <div class="col-sm-12">
                        <table class="tableAdmin">
                            <thead>
                            <tr role="row">
                                <th>Numéro étudiant</th>
                                <th>Nom</th>
                                <th>Prénom</th>
                                <th>Email</th>
                                <th>Valider le compte</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for user in listUser %}
                                <tr class="gradeA odd" role="row">
                                    <td>{{ user.numeroEtudiant }}</td>
                                    <td class="sorting_1">{{ user.nom }}</td>
                                    <td>{{ user.prenom }}</td>
                                    <td>{{ user.email }}</td>
                                    <td><input type="checkbox" name="check_{{user.id}}"></td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        <button type="submit" class="btn btn-success pull-right"><i class="fa fa-check"></i>Valider les éléments sélectionnées</button>
                    </div>
                    <br>
                    </div>
                    
                </form><br/>
                
                   
                
                
            </div>
        </div>
    </div>
</div>

{% endblock %}
