{% extends 'baseAdmin.html.twig' %}

{% block body %}

    <div class="panel panel-default">
        <div class="col-lg-12">
            <h1 class="page-header">Gestion des étudiants</h1>
        </div>
        <div class="col-lg-12">
            <!-- /.panel-heading -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    Liste des étudiants
                </div>
                <div class="panel-body">
                    <button type="button" onclick="location.href='{{ path('admin_user_edit',{'id': 'new ' })}}';" class="btn btn-primary pull-right"><i class="fa fa-plus"></i> Ajouter un étudiant</button>

                    {#Tableau#}
                    <div class="row">
                        <div class="col-sm-12">
                            <table class="tableAdmin">
                                <thead>
                                <tr role="row">
                                    <th>Numéro étudiant</th>
                                    <th>Nom</th>
                                    <th>Prénom</th>
                                    <th>Email</th>
                                    <th>Parcours</th>
                                    <th>Type</th>
                                    <th>Valide</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for user in listUser %}
                                <tr class="gradeA odd" role="row">
                                    <td class="sorting_1">{{ user.numeroEtudiant }}</td>
                                    <td>{{ user.nom }}</td>
                                    <td>{{ user.prenom }}</td>
                                    <td>{{ user.email }}</td>
                                    <td>{{ user.parcours }}</td>
                                    <td>
                                        {% if user.type == constant('TYPE_ETUDIANT',user) %}
                                            Etudiant
                                        {% elseif user.type == constant('TYPE_PROFESSEUR',user) %}
                                            Professeur
                                        {% elseif user.type == constant('TYPE_ADMIN',user)%}
                                            Administrateur
                                        {% endif %}
                                    </td>
                                    <td>{{ user.valide }}</td>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
