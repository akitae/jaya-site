{% extends 'baseAdmin.html.twig' %}

{% block body %}

<div class="panel panel-default">
    <div class="col-lg-12">
        <h1 class="page-header">Gestion des pôles de compétences</h1>
    </div>
    <div class="col-lg-12">
    <!-- /.panel-heading -->
        <div class="panel panel-default">
            <div class="panel-heading">
                Supprimer un Pôle de compétences
            </div>
            <div class="panel-body">
                <table width="50%" class="table table-striped table-bordered table-hover">
                    <tr>
                        <td>Pôle ID</td>
                        <td>{{ pole.id }}</td>
                    </tr>
                    <tr>
                        <td>Pôle Nom</td>
                        <td>{{ pole.nom }}</td>
                    </tr>
                </table>

                <button type="button" onclick="location.href='{{ path('admin_pole')}}';" class="btn btn-default pull-left"> Retour </button>
                <button type="button" onclick="location.href='{{ path('admin_pole_edit',{'id':pole.id}) }}';" class="btn btn-primary"> Modifier </button>
                <button type="button" onclick="location.href='{{ path('admin_pole_delete',{'id':pole.id})}}';" class="btn btn-danger pull-right"> Supprimer </button>
            </div>
        </div>
    </div>
</div>

{% endblock %}
