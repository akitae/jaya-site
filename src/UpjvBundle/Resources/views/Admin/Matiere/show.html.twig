{% extends 'baseAdmin.html.twig' %}

{% block body %}

<div id="page-wrapper" style="min-height: 518px;">
    <div class="panel panel-default">
        <div class="col-lg-12">
            <h1 class="page-header">Gestion des Matières</h1>
        </div>
        <div class="col-lg-12">
        <!-- /.panel-heading -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    Supprimer une matière
                </div>
                <div class="panel-body">
                    <table width="50%" class="table table-striped table-bordered table-hover">
                        <tr>
                            <td>Code de la matière</td>
                            <td>{{ matiere.code }}</td>
                        </tr>
                        <tr>
                            <td>Nom</td>
                            <td>{{ matiere.nom }}</td>
                        </tr>
                        <tr>
                            <td>Nombre de places</td>
                            <td>{{ matiere.place }}</td>
                        </tr>                       
                        <tr>
                            <td>Semestre</td>
                            <td>
                                {{ matiere.semestre.nom }}
                            </td>
                        </tr>
                    </table>

                    <button type="button" onclick="location.href='{{ path('admin_matiere')}}';" class="btn btn-default pull-left"> Retour </button>
                    <button type="button" onclick="location.href='{{ path('admin_matiere_edit',{'id':matiere.id}) }}';" class="btn btn-primary"> Modifier </button>
                    <button type="button" onclick="location.href='{{ path('admin_matiere_delete',{'id':matiere.id})}}';" class="btn btn-danger pull-right"> Supprimer </button>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}