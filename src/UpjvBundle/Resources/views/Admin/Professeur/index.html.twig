{% extends 'baseAdmin.html.twig' %}

{% block body %}

    <div class="panel panel-default">
        <div class="col-lg-12">
            <h1 class="page-header">Gestion des utilisateurs non étudiant</h1>
        </div>
        <div class="col-lg-12">
        <!-- /.panel-heading -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    Liste des professeurs
                </div>
                <div class="panel-body">
                    <button type="button" onclick="location.href='{{ path('admin_professeur_edit',{'id': 'new ' })}}';" class="btn btn-primary pull-right"><i class="fa fa-plus"></i> Ajouter un utilisateur</button>

                    {#Tableau#}
                    <div class="row">
                        <div class="col-sm-12">
                            <table class="tableAdmin">
                                <thead>
                                <tr role="row">
                                    <th>Nom</th>
                                    <th>Prénom</th>
                                    <th>Identifiant</th>
                                    <th>Email</th>
                                    <th>Valide</th>
                                    <th>Action</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for professeur in listProfesseur %}
                                    <tr class="gradeA odd" role="row">
                                        <td>{{ professeur.nom }}</td>
                                        <td>{{ professeur.prenom }}</td>
                                        <td>{{ professeur.username }}</td>
                                        <td>{{ professeur.email }}</td>
                                        <td>
                                            {% if professeur.enabled %}
                                                Oui
                                            {% else %}
                                                Non
                                            {% endif %}
                                        </td>
                                        <td>
                                            <button type="button" onclick="location.href='{{ path('admin_professeur_show',{'id':professeur.id}) }}';" class="btn btn-default">Voir</button>
                                            <button type="button" onclick="location.href='{{ path('admin_professeur_edit',{'id':professeur.id}) }}';" class="btn btn-primary">Modifier</button>
                                            <button type="button" onclick="location.href='{{ path('admin_professeur_delete',{'id':professeur.id}) }}';" class="btn btn-danger">Supprimer</button>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
