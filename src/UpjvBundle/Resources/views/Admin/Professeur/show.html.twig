{% extends 'baseAdmin.html.twig' %}

{% block body %}

<div id="page-wrapper" style="min-height: 518px;">
    <div class="panel panel-default">
        <div class="col-lg-12">
            <h1 class="page-header">Gestion des professeurs</h1>
        </div>
        <div class="col-lg-12">
        <!-- /.panel-heading -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    Supprimer un professeur
                </div>
                <div class="panel-body">
                    <table width="50%" class="table table-striped table-bordered table-hover">
                        <tr>
                            <td>Numéro étudiant</td>
                            <td>{{ professeur.numeroEtudiant }}</td>
                        </tr>
                        <tr>
                            <td>Nom</td>
                            <td>{{ professeur.nom }}</td>
                        </tr>
                        <tr>
                            <td>Prénom</td>
                            <td>{{ professeur.prenom }}</td>
                        </tr>
                        <tr>
                            <td>Email</td>
                            <td>{{ professeur.email }}</td>
                        </tr>
                        <tr>
                            <td>Groupe</td>
                            <td>
                                <ul>
                                    {% for groupe in professeur.groupes %}
                                        <li>{{ groupe }}</li>
                                    {% endfor %}
                                </ul>
                            </td>
                        </tr>
                        <tr>
                            <td>Utilisateur validé</td>
                            <td>{{ professeur.valide}}</td>
                        </tr>
                    </table>

                    <button type="button" onclick="location.href='{{ path('admin_professeur')}}';" class="btn btn-default pull-left"> Retour </button>
                    <button type="button" onclick="location.href='{{ path('admin_professeur_edit',{'id':professeur.id}) }}';" class="btn btn-primary"> Modifier </button>
                    <button type="button" onclick="location.href='{{ path('admin_professeur_delete',{'id':professeur.id})}}';" class="btn btn-danger pull-right"> Supprimer </button>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}