{# empty Twig template #}
{% extends 'baseAdmin.html.twig' %}

{% block body %}

<div class="panel panel-default">
  <div class="col-lg-12">
    <h1 class="page-header">Gestion des groupes</h1>
  </div>
  <div class="col-lg-12">
    <!-- /.panel-heading -->
    <div class="panel panel-default">
      <div class="panel-heading">
        Liste des groupes
      </div>
      <div class="panel-body">
        <button type="button" onclick="location.href='{{ path('admin_groupe_edit',{'id': 'new ' })}}';" class="btn btn-primary pull-right"><i class="fa fa-plus"></i> Ajouter un groupe</button>
        {#Tableau#}
        <div class="row">
          <div class="col-sm-12">
            <table class="tableAdmin">
              <thead>
                <tr role="row">
                  <th>Id</th>
                  <th>Type cours</th>
                  <th>Matieres</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                {% for groupe in listGroupe %}
                <tr class="gradeA odd" role="row">
                  <td class="sorting_1">{{ groupe.id }}</td>
                  <td>{{ groupe.typeCours }} </td>
                  <td>
                    {{ groupe.matiere }}
                  </td>
                  <td>
                    <button type="button" onclick="location.href='{{ path('admin_groupe_show',{'id':groupe.id}) }}';" class="btn btn-default">Voir</button>
                    <button type="button" onclick="location.href='{{ path('admin_groupe_edit',{'id':groupe.id}) }}';" class="btn btn-primary">Modifier</button>
                    <button type="button" onclick="location.href='{{ path('admin_groupe_delete',{'id':groupe.id}) }}';" class="btn btn-danger">Supprimer</button>
                  </td>
                </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% endblock %}
