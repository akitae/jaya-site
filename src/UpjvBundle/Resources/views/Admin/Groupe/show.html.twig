{% extends 'baseAdmin.html.twig' %}

{% block body %}

<div class="panel panel-default">
    <div class="col-lg-12">
        <h1 class="page-header">Gestion des groupes</h1>
    </div>
    <div class="col-lg-12">
    <!-- /.panel-heading -->
        <div class="panel panel-default">
            <div class="panel-heading">
                Supprimer un groupes
            </div>
            <div class="panel-body">
                <table width="50%" class="table table-striped table-bordered table-hover">
                    <tr>
                        <td>ID</td>
                        <td>{{ groupe.id }}</td>
                    </tr>
                    <tr>
                        <td>Nom du groupe</td>
                        <td>{{ groupe.nom }}</td>
                    </tr>
                    <tr>
                        <td>Mati√®re</td>
                        <td>{{ groupe.matiere }}</td>
                    </tr>
                    <tr>
                        <td>Utilisateurs</td>
                        <td>
                            <ul>
                                {% for utilisateur in groupe.utilisateurs %}
                                    <li>{{ utilisateur.Nom }} {{ utilisateur.prenom }}</li>
                                {% endfor %}
                            </ul>
                        </td>
                    </tr>
                </table>
                <button type="button" onclick="location.href='{{ path('admin_groupe')}}';" class="btn btn-default pull-left"> Retour </button>
                <button type="button" onclick="location.href='{{ path('admin_groupe_edit',{'id':groupe.id}) }}';" class="btn btn-primary"> Modifier </button>
                <button type="button" onclick="location.href='{{ path('admin_groupe_delete',{'id':groupe.id})}}';" class="btn btn-danger pull-right"> Supprimer </button>
            </div>
        </div>
    </div>
</div>

{% endblock %}
