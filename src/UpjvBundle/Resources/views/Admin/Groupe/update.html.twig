{% extends 'baseAdmin.html.twig' %}
{% block body %}
    <div class="panel panel-default">
        <div class="col-lg-12">
            <h1 class="page-header">Gestion des groupes</h1>
        </div>
        <div class="col-lg-12">
            <!-- /.panel-heading -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    Créer ou modifier un groupe ( Étapes 2 : choix du nom et de la matière)
                </div>
                <div class="panel-body">
                    {{ form_start(form) }}
                    <table class="table table-bordered">
                        <tr>
                            <td>{{ form_label(form.matiere) }}</td>
                            <td>{{ form_widget(form.matiere)}}</td>
                        </tr>
                        <tr>
                            <td>{{ form_label(form.nom) }}</td>
                            <td>{{ form_widget(form.nom)}}</td>
                        </tr>
                    </table>
                    <button type="button" onclick="location.href='{{ path('admin_groupe')}}';" class="btn btn-default pull-left"> Retour </button>
                    {{ form_row(form.save) }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
