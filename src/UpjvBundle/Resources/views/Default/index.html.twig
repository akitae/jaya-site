{% extends 'jaya/baseJaya.html.twig' %}
{% block title %}
    jAYA Reborn
{% endblock %}
{% block body %}
    <div class="content dashboard">
        <div class="row">
            <div class="col-md-12">
                <h3 class="user-hello border-title">Bonjour <b>{{ user.prenom }}</b>, ou plutôt devrais-je dire <b>{{ user.username }}</b> <img class="ninja" src="{{ asset('images/ninja.png') }}"></img> !</h3>
            </div>
        </div>

        {% block retour %}
            {% include ':jaya:retour.html.twig' %}
        {% endblock %}

        <div class="row">
            <div class="col-md-6">
                <a href="{{ path('choix_ue') }}">
                    <div class="card">
                        <div class="card-title"><i class="glyphicon glyphicon-education icon-title"></i>Choix des UEs</div>
                        <div class="card-description">
                            Sélectionnez vos unités d'enseignements optionnelles pour le semestre en cours.
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-md-6">
                <a href="{{ path('fos_user_profile_edit') }}">
                    <div class="card">
                        <div class="card-title">Mon compte</div>
                        <div class="card-description">
                            Mettez à jour vos informations de compte comme votre adresse email ou votre identifiant de compte.
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
{% endblock %}
