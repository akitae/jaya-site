{% extends 'jaya/baseJaya.html.twig' %}
{% block title %}
    Inscription
{% endblock %}
{% block body %}

    <div class="container-fluid">
        <div class="wrapper-registration">
            <div class="sign-in">
                {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-12">
                        {{ form_label(form.nom) }}
                    </div>
                    <div class="col-md-12">
                        {{ form_widget(form.nom) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        {{ form_label(form.prenom) }}
                    </div>
                    <div class="col-md-12">
                        {{ form_widget(form.prenom) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        {{ form_label(form.email) }}
                    </div>
                    <div class="col-md-12">
                        {{ form_widget(form.email) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        {{ form_label(form.numeroEtudiant) }}
                    </div>
                    <div class="col-md-12">
                        {{ form_widget(form.numeroEtudiant) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        {{ form_label(form.motDePasse) }}
                    </div>
                    <div class="col-md-12">
                        {{ form_widget(form.motDePasse) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        {{ form_label(form.motDePasseCheck) }}
                    </div>
                    <div class="col-md-12">
                        {{ form_widget(form.motDePasseCheck) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        {{ form_row(form.save) }}
                    </div>
                </div>

                {{ form_end(form) }}

                {% if error %}
                    {% for key,value in error %}
                        {{ value }}
                    {% endfor %}
                {% endif %}
            </div>
        </div>
    </div>

{% endblock %}